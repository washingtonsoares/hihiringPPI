<h1>Listing admin_comments</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Publication</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_comments.each do |admin_comment| %>
      <tr>
        <td><%= admin_comment.comment %></td>
        <td><%= admin_comment.publication %></td>
        <td><%= admin_comment.user %></td>
        <td><%= link_to 'Show', admin_comment %></td>
        <td><%= link_to 'Edit', edit_admin_comment_path(admin_comment) %></td>
        <td><%= link_to 'Destroy', admin_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_admin_comment_path %>
