<%= render 'admin/users/publications/modal' %>

<div id="my_publications" class="">
  <article class="media">
    <div id="publication_list_item" class="media-body blog-item">
      <ul id="list_publications" class="col-lg-12 col-sm-12">
        <% current_user.admin_publications.each do |admin_publication| %>
          <li class="col-lg-6  publication_item">
            <div id="publication_list_thumb" class="">

              <!--widget start-->
              <section class="">

                <div id="publication_list_thumb_layout" class="twt-feed" style="height: 60px; background-image: url('<%= admin_publication.thumb_url(:thumb_publication)%>')">

                </div>

                <div id="publication_list_descript" class="weather-category twt-category">
                  <h4 class="titulo_publication_list">
                    <i class="icon icon-user"></i>
                    <%= link_to admin_user_publication_path(admin_publication.user_id, admin_publication.id) do %>
                      <%= truncate(admin_publication.title, length: 25) %>
                    <% end %>
                  </h4>

                  <p id="email_publication_owner_list" class="">
                    <% if current_user.id == admin_publication.user_id %>
                      <%= link_to edit_admin_user_publication_path(current_user, admin_publication), class: "editarConteudo pull-right" do %>
                        <i class="icon-edit-sign" style="color: #667FA0">Editar</i>
                      <% end %>
                    <% end %>
                  </p>

                  <p class="descrip_public">
                    <%= truncate(admin_publication.resume, length: 90) { link_to ' visualizar', admin_user_publication_path(retornaNomeFormatado(admin_publication.user_id), admin_publication) } %>
                  </p>
                </div>

              </section>
              <!--widget end-->

            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </article>
</div>
